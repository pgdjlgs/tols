#!/bin/bash

# مسار مجلد الأدوات الخاص بك
REPO_DIR="$HOME/dw-pgdjlgs"

if [ "$1" == "-s" ]; then
    TOOL_NAME=$2
    if [ -f "$REPO_DIR/$TOOL_NAME" ]; then
        echo "⚙️ جاري تثبيت الأداة: $TOOL_NAME ..."
        chmod +x "$REPO_DIR/$TOOL_NAME"
        cp "$REPO_DIR/$TOOL_NAME" /usr/local/bin/
        echo "✅ تم التثبيت! يمكنك الآن كتابة '$TOOL_NAME' في أي مكان."
    else
        echo "❌ خطأ: الأداة '$TOOL_NAME' غير موجودة في المستودع."
    fi
else
    echo "❓ الاستخدام الصحيح: sudo dw-pgdjlgs -s [اسم_الأداة]"
fi
